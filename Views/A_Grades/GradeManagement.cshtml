@model StudentManagementSystem.Models.ViewModel.GradeViewModel

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@{
    ViewData["Title"] = "Grade Management";
}

<h1>Grade Management</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="GradeManagement" method="post">
            <div class="form-group">
                <label asp-for="StudentId" class="control-label">Select Student</label>
                <select asp-for="StudentId" class="form-control" asp-items="@(new SelectList(Model.Students, "Id", "NameSurname"))">
                    <option value="">-- Select Student --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label">Select Course</label>
                <select asp-for="CourseId" class="form-control" asp-items="@(new SelectList(Model.Courses, "Id", "Title"))">
                    <option value="">-- Select Course --</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Load Grades</button>
        </form>
    </div>
</div>

@if (Model.Grades != null && Model.Grades.Any())
{
    <h2>Grades</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grade in Model.Grades)
            {
                <tr>
                    <td>@grade.Title</td>
                    <td>@grade.Value</td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="AddGrade" method="post">
            <input type="hidden" asp-for="StudentId" />
            <input type="hidden" asp-for="CourseId" />
            <input type="hidden" asp-for="NewGrade.StudentCourseId" />
            <div class="form-group">
                <label asp-for="NewGrade.Title" class="control-label">Grade Title</label>
                <input asp-for="NewGrade.Title" class="form-control" />
                <span asp-validation-for="NewGrade.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewGrade.Value" class="control-label">Grade Value</label>
                <input asp-for="NewGrade.Value" class="form-control" />
                <span asp-validation-for="NewGrade.Value" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add Grade</button>
        </form>
    </div>
</div>